@page
@model ECommerce2.Pages.CheckoutModel
@{
}

<h2>Checkout</h2>
<form class="needs-validation" novalidate>
    <div class="container">
        <div class="row align-items-start">
            <div class="form-group col">
                <label for="userEmail">Email address</label>
                <input type="email" class="form-control" id="userEmail" aria-describedby="emailHelp" placeholder="Enter email" required>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row align-items-start">
            <div class="form-group col">
                <label for="fName">First name</label>
                <input type="text" class="form-control" id="fName" placeholder="Enter first name" required />
            </div>
            <div class="form-group col">
                <label for="lName">Last name</label>
                <input type="text" class="form-control" id="lName" placeholder="Enter last name" required />
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row align-items-start">
            <div class="form-group col">
                <label for="userCard">Card number</label>
                <input type="number" class="form-control" id="userCard" placeholder="Enter card number" required />
            </div>
            <div class="form-gruop col">
                <label for="userAddress">Address</label>
                <input type="text" class="form-control" id="userAddress" placeholder="Enter address" required />
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row align-items-start">
            <div class="form-group col">
                <label for="userCity">City</label>
                <input type="text" class="form-control" id="userCity" placeholder="Enter city" required />
            </div>
            <div class="form-group col">
                <label for="userState">State</label>
                <input type="text" class="form-control" id="userState" placeholder="Enter state" required />
            </div>
            <div class="form-group col">
                <label for="userZip">Zip code</label>
                <input type="text" class="form-control" id="userZip" placeholder="Enter zip" required />
            </div>
        </div>
        <input type="button" class="form-control btn-dark" id="CheckoutButton" value="Checkout" />
    </div>

</form>