@page
@model ECommerce2.Pages.CheckoutModel
@{
}
<h2>Checkout</h2>
<form method ="post" class="needs-validation" novalidate>
    <div class="container">
        <div class="row align-items-start">
            <div class="form-group col">
                <label for="fName">First name</label>
                <input type="text" asp-for="Customer.Customer_FName" class="form-control" placeholder="Enter First Name" required  />
            </div>
            <div class="form-group col">
                <label for="lName">Last name</label>
                <input type="text" asp-for="Customer.Customer_LName" class="form-control" placeholder="Enter Last Name" required />
            </div>
        </div>
    </div>
    <div class="container">
        <div class="form-group col">
            <label for="userAddress">Address</label>
            <input type="text" asp-for="Customer.Customer_Address" class="form-control" placeholder="Enter Address" required />
            <div class="form-gruop col">
                <label for="usernumber">Phone Number</label>
                <input type="tel" asp-for="Customer.Customer_PhoneNum" class="form-control" placeholder="Enter Phone Number" required />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

</form>