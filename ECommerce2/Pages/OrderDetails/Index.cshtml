@model ECommerce2.Pages.OrderDetails.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Order Details</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].OrderDetail_SalesOrderDetailID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].Tax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].SubTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].TotalPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderDetail) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDetail_SalesOrderDetailID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.OrderDetail_OrderID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.OrderDetail_OrderID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.OrderDetail_OrderID">Delete</a>
            </td>
        </tr>
}
    </tbody>
