@page
@model ECommerce2.Pages.Carts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cart.Cart_CustomerID" />
            <div class="form-group">
                <label asp-for="Cart.CartID" class="control-label"></label>
                <input asp-for="Cart.CartID" class="form-control" />
                <span asp-validation-for="Cart.CartID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cart.ProdName" class="control-label"></label>
                <input asp-for="Cart.ProdName" class="form-control" />
                <span asp-validation-for="Cart.ProdName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cart.Quantity" class="control-label"></label>
                <input asp-for="Cart.Quantity" class="form-control" />
                <span asp-validation-for="Cart.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cart.Subtotal" class="control-label"></label>
                <input asp-for="Cart.Subtotal" class="form-control" />
                <span asp-validation-for="Cart.Subtotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cart.Tax" class="control-label"></label>
                <input asp-for="Cart.Tax" class="form-control" />
                <span asp-validation-for="Cart.Tax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cart.TotalPrice" class="control-label"></label>
                <input asp-for="Cart.TotalPrice" class="form-control" />
                <span asp-validation-for="Cart.TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
